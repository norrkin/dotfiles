## aliases

## shortcuts
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../../"
alias dc="cd ~/Documents"
alias dl="cd ~/Downloads"
alias rp="cd ~/repo"
## list all files
alias ll="ls -al"
## tail file
alias log="tail -f"
## ssh shortcut to nas - locally
alias nas="ssh -p 3499 mark@nas"
## open vs code
alias code="/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code"
## whats my ip
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

## initise terraform
alias tf="terraform init --upgrade -backend=false"
## run pre-commit against all files
alias pc="pre-commit run --all-files"
