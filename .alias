#!/bin/bash

# list all files
alias ll="ls -al"

# shortcuts
alias ..="cd .."
alias ...="cd ../../"
alias dc="cd ~/Documents"
alias dl="cd ~/Downloads"

# ssh shortcut to nas - locally
alias nas="ssh -p 3499 mark@nas"

# tmux
alias tm="tmux new -s mark"
alias tma="tmux a -t mark"

# git commands
alias g="git"
alias gs="git status "
alias ga="git add "
alias gc="git commit "
alias gp="git push -u origin master"

# edit hosts
alias hosts="sudo nano /etc/hosts"

# code
alias code="/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code"
# vnc listener
alias vnc="cd /Applications/VNC\ Viewer.app/Contents/MacOS/ && ./vncviewer -listen 5500 | echo 'vnc listener is now running.'"
